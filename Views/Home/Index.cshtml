@model IEnumerable<Fans.Models.Posts>
@{
    ViewData["Title"] = "Início";
}

@section Styles {
    <link rel="stylesheet" href="~/css/posts.css" />
}

<section id="posts" hx-get="/posts" hx-trigger="intersect once" hx-swap="beforeend">
    <div class="post-create-container">
        <img width="32" height="32" src="https://picsum.photos/64/64" alt="">
        <div class="post-create-body">
            <div class="post-content-container">
                <div id="postContent" contenteditable="true">
                </div>
                <span id="counterLength" class="counter">0/1024</span>
            </div>

            <div class="post-create-buttons">
                <span id="addPhoto">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                        <g>

                            <line fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="12"
                                x2="12" y1="19" y2="5" />

                            <line fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="5"
                                x2="19" y1="12" y2="12" />
                        </g>
                    </svg>
                </span>

                <span id="sendPost">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 -0.5 25 25" fill="none">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M18.455 9.8834L7.063 4.1434C6.76535 3.96928 6.40109 3.95274 6.08888 4.09916C5.77667 4.24558 5.55647 4.53621 5.5 4.8764C5.5039 4.98942 5.53114 5.10041 5.58 5.2024L7.749 10.4424C7.85786 10.7903 7.91711 11.1519 7.925 11.5164C7.91714 11.8809 7.85789 12.2425 7.749 12.5904L5.58 17.8304C5.53114 17.9324 5.5039 18.0434 5.5 18.1564C5.55687 18.4961 5.77703 18.7862 6.0889 18.9323C6.40078 19.0785 6.76456 19.062 7.062 18.8884L18.455 13.1484C19.0903 12.8533 19.4967 12.2164 19.4967 11.5159C19.4967 10.8154 19.0903 10.1785 18.455 9.8834V9.8834Z"
                            stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </span>
            </div>
        </div>
    </div>
</section>
