@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Entrar na conta";
    var error = Context.Session.GetString("error");
}

<div class="d-flex">
    <div class="side-1">
        <div class="content">
            <h1>Fans</h1>
            <p>Apoia as tuas ventoinhas favoritas</p>
        </div>
    </div>
    <div class="loginForm">
        <form action="/auth/loginProc" method="post">
            <p>Inicie sessão agora</p>
            @if (error != null)
            {
                Context.Session.Remove("error");
                <div class="error">
                    <p>@error</p>
                </div>
            }
            <input required type="text" name="username" id="username" placeholder="Nome de utilizador">
            <input required type="password" name="password" id="password" placeholder="Password">
            <input required type="submit" value="Entrar">
            <p>Não tem conta? <a href="/auth/register">Registe-se</a></p>
        </form>
    </div>
</div>