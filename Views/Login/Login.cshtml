@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Entrar na conta";
}

<div class="d-flex">
    <div>
        <div class="content" >
            <h1>Fans</h1>
            <p>Apoia as tuas ventoinhas favoritas</p>
        </div>
    </div>
    <div class="loginForm">
        <form action="" method="post">
            <p>Inicie sessão agora</p>
            <input type="email" name="" id="" placeholder="Email">
            <input type="password" name="" id="" placeholder="Password">
            <input type="submit" value="Entrar">
            <p>Não tem conta? <a href="/register">Registe-se</a></p>
        </form>
    </div>
</div>